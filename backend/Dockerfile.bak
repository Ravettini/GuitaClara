FROM node:18-alpine

WORKDIR /app

# Copiar archivos de dependencias primero (para cache de Docker)
COPY package*.json ./
COPY prisma ./prisma

# Instalar dependencias
RUN npm install

# Copiar el resto del código
COPY . .

# Generar Prisma Client y compilar TypeScript
RUN npm run build

# Exponer el puerto (Railway usa process.env.PORT, pero lo dejamos por si acaso)
EXPOSE 3001

# Comando de inicio (solo ejecuta el código compilado)
CMD ["npm", "start"]

